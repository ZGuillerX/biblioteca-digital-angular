FROM node:20

WORKDIR /app

COPY package*.json ./

# mirror r√°pido y instala dependencias
RUN npm config set registry https://registry.npmmirror.com \
    && npm install --no-audit --no-fund --prefer-offline \
    && npm install bootstrap --save \
    && npm install -g @angular/cli@16.2.10

COPY . .

CMD ["npm", "start"]
